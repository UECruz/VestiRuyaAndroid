<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlue"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorGray"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icBack"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/back_icon"
                        android:tint="@color/colorBlue2"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:contentDescription="TODO"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_14sdp"
                        android:text="Profile"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/icEdit"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/colorBlue2"
                        android:contentDescription="TODO"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:background="@color/colorBlue">

                <ImageView
                    android:id="@+id/icProfile"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:contentDescription="TODO" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/icProfile">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lilly"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lilly2@gmail.com"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="222"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VA"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="start"
                                android:text="Sample Images"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                tools:ignore="HardcodedText,RtlHardcoded" />

                        </RelativeLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv1"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_100sdp"
                                    android:scaleType="centerCrop"
                                    android:contentDescription="TODO" />

                                <ImageView
                                    android:id="@+id/iv2"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_100sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:scaleType="centerCrop"
                                    android:contentDescription="TODO"
                                    tools:ignore="HardcodedText,RtlHardcoded" />

                                <ImageView
                                    android:id="@+id/iv3"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_100sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:scaleType="centerCrop"
                                    android:contentDescription="TODO"
                                    tools:ignore="RtlHardcoded" />
                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:id="@+id/txtReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Review:"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:id="@+id/relativeReview"
                            android:layout_height="match_parent">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvRatings"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">
                            </android.support.v7.widget.RecyclerView>

                            <TextView
                                android:id="@+id/tvNoData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Review Found"
                                android:textSize="@dimen/_14sdp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />

                        </RelativeLayout>
                    </LinearLayout>
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnLogout"
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp"
                        app:backgroundTint="@color/colorBlue1"
                        android:layout_gravity="center_horizontal"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>