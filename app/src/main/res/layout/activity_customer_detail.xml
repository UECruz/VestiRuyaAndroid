<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorGray"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Cancel"
                        android:textColor="@color/colorBlue2"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Customer Additional Info"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="HardcodedText" />


                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="Body Images:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:scaleType="centerCrop"
                            android:contentDescription="TODO"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tvSelect1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Upload Image"
                            android:textColor="@color/colorBlue2"
                            android:textSize="@dimen/_11sdp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:scaleType="centerCrop"
                            android:contentDescription="TODO" />

                        <TextView
                            android:id="@+id/tvSelect2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Upload Image"
                            android:textColor="@color/colorBlue2"
                            android:textSize="@dimen/_11sdp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:scaleType="centerCrop"
                            android:contentDescription="TODO"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tvSelect3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="Upload Image"
                            android:textColor="@color/colorBlue2"
                            android:textSize="@dimen/_11sdp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="Measurement:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Height:"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etHeight"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="Enter height inches"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Neck CIR"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etNeck"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="Enter neck inches"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chest CIR"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etChest"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="Enter chest inches"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Waist CIR"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etWaist"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="Enter waist inches"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bust Size"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etBust"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="Enter bust inches"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Arm Length"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etArms"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="Enter arms inches"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Leg Length"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etLegs"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edt"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="Enter legs inches"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@android:color/transparent"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlue2"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>
</layout>