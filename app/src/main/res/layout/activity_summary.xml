<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.SummaryActivity">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar"
            android:layout_height="?actionBarSize"
            android:background="@color/colorGray"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:singleLine="true"
                    android:text="Home"
                    android:textColor="@color/colorBlue2"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Summary"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="HardcodedText" />


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Body Type:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvBodyType"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Fabric:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvFabric"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Sleeves:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvSleeves"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Straps:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvStraps"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Neckline:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvNeckline"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Back Detail:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvBackDetail"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Embelishment:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvEmbelishment"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Price:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/etPrice"
                    android:background="@drawable/bg_edt"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:ignore="LabelFor"
                    android:autofillHints=""
                    tools:targetApi="o" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/_4sdp"
                    android:text="Due:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,InefficientWeight" />

                <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
                    android:id="@+id/single_day_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="210dp"
                    app:picker_curved="true"
                    app:picker_cyclic="true"
                    app:picker_mustBeOnFuture="true"
                    app:picker_visibleItemCount="7"
                    />

            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:id="@+id/tvPost"
                android:textColor="@color/colorBlue2"
                android:text="Post"
                android:textSize="@dimen/_18sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </RelativeLayout>
</layout>